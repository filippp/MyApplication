<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <EditText
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:layout_marginStart="220dp"
            android:layout_marginTop="140dp"
            android:hint="@string/edit_name"
            android:id="@+id/editName"/>
    <TextView
            android:text="@string/name"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:id="@+id/textName"
            android:textAlignment="center"
            android:layout_marginStart="90dp"
            android:layout_marginTop="140dp" android:textSize="18sp" android:textColor="?attr/editTextColor"
            android:gravity="center_vertical"/>
    <EditText
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:layout_marginStart="220dp"
            android:layout_marginTop="200dp"
            android:hint="@string/edit_city"
            android:id="@+id/editCity"/>
    <TextView
            android:text="@string/city"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:id="@+id/textCity"
            android:textAlignment="center"
            android:layout_marginStart="90dp"
            android:layout_marginTop="200dp" android:textSize="18sp" android:textColor="?attr/editTextColor"
            android:gravity="center_vertical"/>
    <EditText
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:layout_marginStart="220dp"
            android:layout_marginTop="260dp"
            android:id="@+id/editFrequency"/>
    <TextView
            android:text="@string/frequency"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:id="@+id/textFrequency"
            android:textAlignment="center"
            android:layout_marginStart="90dp"
            android:layout_marginTop="260dp" android:textSize="18sp" android:textColor="?attr/editTextColor"
            android:gravity="center_vertical"/>
    <Button
            android:text="@string/button_settings_save"
            android:layout_width="130dp"
            android:layout_height="70dp" android:id="@+id/btnSettingsSave"
            android:layout_marginStart="145dp"
            android:layout_marginTop="360dp"/>

</FrameLayout>